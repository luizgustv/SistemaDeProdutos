@model SistemaDeProdutos.Models.TipoProduto

@{
    ViewData["Title"] = "Details";
}

<h1>Consultar</h1>

<div class="col-md-6">
    <div class="form-group">
        <label>ID:</label>
        <div class="col-md-10">
            <b>@Html.DisplayTextFor(model => model.IdTipo)</b>
        </div>
    </div>

    <div class="form-group">
        <label>Descrição:</label>
        <div class="col-md-10">
            <b>@Html.DisplayTextFor(model => model.DescricaoTipo)</b>
        </div>
    </div>
    <div class="form-group">
        <label>Comercializado:</label>
        <div class="checkbox col-md-10">
            <b>@Html.DisplayTextFor(model => model.StringToBool)</b>
        </div>
    </div>
</div>

<button class="btn btn-dark">
    <a asp-action="Edit" asp-route-id="@Model.IdTipo">Editar</a>
</button>
<p>
<button class="btn btn-dark">
    <a asp-action="Index">Voltar</a>
</button>
    

