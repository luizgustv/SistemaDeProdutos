@model SistemaDeProdutos.Models.TipoProduto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<div class="col-md-6">
    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdTipo" />

        <div class="form-group">
            <label asp-for="DescricaoTipo" class="control-label">Descrição</label>
            <div class="col-md-10">
                <input asp-for="DescricaoTipo" class="form-control" />
            </div>
            <span asp-validation-for="DescricaoTipo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StringToBool" class="control-label">Comercializado</label>
            <div class="checkbox col-md-10" id="check">
                <input asp-for="StringToBool" type="checkbox" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Savar Alterações" class="btn btn-dark" />
            </div>
        </div>

    </form>
</div>

<a asp-action="Index" class="btn btn-dark">Voltar</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
